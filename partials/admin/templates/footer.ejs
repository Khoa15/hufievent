<script>
    const pagination = (data, page, limit)=>{
        var i = limit * page
        return data.slice(i, i+limit)
    }
    class Pagination{
        constructor(){
            this.data = []
            this.page = 0
            this.limit = 7
        }
        init(data=[], page=0, limit=7){
            this.data = data
            this.page = page
            this.limit = limit
        }
        dataPage(){
            const i = this.page * this.limit
            return this.data.slice(i, i + this.limit)
        }
        pages(){
            return this.data.length / this.limit
        }
        index(){
            return this.page
        }
        changePage(page){
            this.page = page
        }
        makePagination(){
            var listPage = ""
            let i = (this.page < 4) ? 0 : this.page - 4
            for(; i < this.pages(); i++){
                listPage += `<button onclick="changePage(${i})" class="btn`
                if(this.page == i){
                    listPage += ` bg-success `
                }
                listPage += `">${i+1}</button>`
            }
            return listPage
        }
    }
    const pagi = new Pagination()
